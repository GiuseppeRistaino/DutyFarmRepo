<items xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="items.xsd">

    <collectiontypes>
        <collectiontype code="GenderList" elementtype="Gender" autocreate="true" generate="true" type="list"/>
        <collectiontype code="SwatchColorSet" elementtype="SwatchColorEnum" autocreate="true" generate="true"
                        type="set"/>
    </collectiontypes>

    <enumtypes>
        <enumtype generate="true" code="SwatchColorEnum" autocreate="true" dynamic="true">
            <value code="BLACK"/>
            <value code="BLUE"/>
            <value code="BROWN"/>
            <value code="GREEN"/>
            <value code="GREY"/>
            <value code="ORANGE"/>
            <value code="PINK"/>
            <value code="PURPLE"/>
            <value code="RED"/>
            <value code="SILVER"/>
            <value code="WHITE"/>
            <value code="YELLOW"/>
        </enumtype>

        <enumtype generate="true" code="StateEnum" autocreate="true" dynamic="true">
            <value code="SOLID"/>
            <value code="LIQUID"/>
        </enumtype>
    </enumtypes>

    <itemtypes>

        <!-- Add your item definitions here -->
        <itemtype code="SeedProduct" extends="Product"
                  generate="true" autocreate="true">
            <deployment table="seedProduct" typecode="22000"/>
        </itemtype>

        <itemtype code="SeedVariantProduct" extends="VariantProduct"
                  autocreate="true" generate="true">
            <deployment table="seedVariantProduct" typecode="22001"/>
            <attributes>
                <attribute qualifier="weight" type="java.lang.Float">
                    <description>Descrive il peso del prodotto</description>
                    <modifiers optional="false"/>
                    <persistence type="property"/>
                </attribute>
                <attribute qualifier="origin" type="java.lang.String">
                    <description>Descrive il paese di provenienza del seme</description>
                    <modifiers optional="false"/>
                    <persistence type="property"/>
                </attribute>
                <attribute qualifier="growthTime" type="java.lang.String">
                    <description>Descrive il tempo necessario per la crescita della pianta</description>
                    <modifiers optional="false"/>
                    <persistence type="property"/>
                </attribute>
            </attributes>
        </itemtype>

        <itemtype code="FlowerPotProduct" extends="Product"
                  generate="true" autocreate="true">
            <deployment table="flowerPotProduct" typecode="22002"/>
        </itemtype>

        <itemtype code="FlowerPotVariantProduct" extends="VariantProduct"
                  autocreate="true" generate="true">
            <deployment table="flowerPotVariantProduct" typecode="22003"/>
            <attributes>
                <attribute qualifier="form" type="java.lang.String">
                    <description>Descrive la forma della fioriera</description>
                    <modifiers optional="false"/>
                    <persistence type="property"/>
                </attribute>
                <attribute qualifier="material" type="java.lang.String">
                    <description>Descrive il materiale della fioriera</description>
                    <modifiers optional="false"/>
                    <persistence type="property"/>
                </attribute>
                <attribute qualifier="color" type="SwatchColorEnum">
                    <description>Descrive il colore della fioriera</description>
                    <modifiers optional="false"/>
                    <persistence type="property"/>
                </attribute>
                <attribute qualifier="width" type="java.lang.Float">
                    <description>Descrive la larghezza della fioriera</description>
                    <modifiers optional="false"/>
                    <persistence type="property"/>
                </attribute>
                <attribute qualifier="height" type="java.lang.Float">
                    <description>Descrive l'altezza della fioriera</description>
                    <modifiers optional="false"/>
                    <persistence type="property"/>
                </attribute>
                <attribute qualifier="depth" type="java.lang.Float">
                    <description>Descrive la profondità della fioriera</description>
                    <modifiers optional="false"/>
                    <persistence type="property"/>
                </attribute>
            </attributes>
        </itemtype>

        <itemtype code="FertilizerProduct" extends="Product"
                  generate="true" autocreate="true">
            <deployment table="fertilizerProduct" typecode="22004"/>
        </itemtype>

        <itemtype code="FertilizerVariantProduct" extends="VariantProduct"
                  autocreate="true" generate="true">
            <deployment table="fertilizerVariantProduct" typecode="22005"/>
            <attributes>
                <attribute qualifier="weight" type="java.lang.Float">
                    <description>Descrive il peso del fertilizzante</description>
                    <modifiers optional="false"/>
                    <persistence type="property"/>
                </attribute>
                <attribute qualifier="color" type="SwatchColorEnum">
                    <description>Descrive il colore del fertilizzante</description>
                    <modifiers optional="false"/>
                    <persistence type="property"/>
                </attribute>
                <attribute qualifier="state" type="StateEnum">
                    <description>Descrive lo stato del fertilizzante</description>
                    <modifiers optional="false"/>
                    <persistence type="property"/>
                </attribute>
            </attributes>
        </itemtype>

        <!-- TypeGroups are for structure of this file only -->

        <typegroup name="Apparel">
            <itemtype code="ApparelProduct" extends="Product"
                      autocreate="true" generate="true"
                      jaloclass="org.dutyfarm.core.jalo.ApparelProduct">
                <description>Base apparel product extension that contains additional attributes.</description>
                <attributes>
                    <attribute qualifier="genders" type="GenderList">
                        <description>List of genders that the ApparelProduct is designed for</description>
                        <modifiers/>
                        <persistence type="property"/>
                    </attribute>
                </attributes>
            </itemtype>

            <itemtype code="ApparelStyleVariantProduct" extends="VariantProduct"
                      autocreate="true" generate="true"
                      jaloclass="org.dutyfarm.core.jalo.ApparelStyleVariantProduct">
                <description>Apparel style variant type that contains additional attribute describing variant style.
                </description>
                <attributes>
                    <attribute qualifier="style" type="localized:java.lang.String"
                               metatype="VariantAttributeDescriptor">
                        <description>Color/Pattern of the product.</description>
                        <modifiers/>
                        <persistence type="property"/>
                    </attribute>

                    <attribute qualifier="swatchColors" type="SwatchColorSet">
                        <description>A normalized color mapping to a standardized front-end navigable name.
                        </description>
                        <modifiers/>
                        <persistence type="property"/>
                    </attribute>
                </attributes>

            </itemtype>

            <itemtype code="ApparelSizeVariantProduct" extends="ApparelStyleVariantProduct"
                      autocreate="true" generate="true"
                      jaloclass="org.dutyfarm.core.jalo.ApparelSizeVariantProduct">
                <description>Apparel size variant type that contains additional attribute describing variant size.
                </description>
                <attributes>
                    <attribute qualifier="size" type="localized:java.lang.String"
                               metatype="VariantAttributeDescriptor">
                        <description>Size of the product.</description>
                        <modifiers/>
                        <persistence type="property"/>
                    </attribute>
                </attributes>
            </itemtype>
        </typegroup>

        <typegroup name="Electronics">
            <itemtype code="ElectronicsColorVariantProduct" extends="VariantProduct"
                      autocreate="true" generate="true"
                      jaloclass="org.dutyfarm.core.jalo.ElectronicsColorVariantProduct">
                <description>Electronics color variant type that contains additional attribute describing variant color.
                </description>
                <attributes>
                    <attribute qualifier="color" type="localized:java.lang.String"
                               metatype="VariantAttributeDescriptor">
                        <description>Color of the product.</description>
                        <modifiers/>
                        <persistence type="property"/>
                    </attribute>
                </attributes>
            </itemtype>
        </typegroup>

    </itemtypes>
</items>
