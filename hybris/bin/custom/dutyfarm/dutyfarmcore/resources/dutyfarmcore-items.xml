<items xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="items.xsd">

    <collectiontypes>
        <collectiontype code="GenderList" elementtype="Gender" autocreate="true" generate="true" type="list"/>
        <collectiontype code="SwatchColorSet" elementtype="SwatchColorEnum" autocreate="true" generate="true"
                        type="set"/>
    </collectiontypes>

    <enumtypes>
        <enumtype generate="true" code="SwatchColorEnum" autocreate="true" dynamic="true">
            <value code="BLACK"/>
            <value code="BLUE"/>
            <value code="BROWN"/>
            <value code="GREEN"/>
            <value code="GREY"/>
            <value code="ORANGE"/>
            <value code="PINK"/>
            <value code="PURPLE"/>
            <value code="RED"/>
            <value code="SILVER"/>
            <value code="WHITE"/>
            <value code="YELLOW"/>
        </enumtype>
    </enumtypes>

    <itemtypes>

        <!-- Add your item definitions here -->
        <itemtype code="PlantProduct" extends= "Product" autocreate="true" generate="true">
            <deployment table="plantProduct" typecode="21999"/>
            <attributes>
                <attribute qualifier="farmland" type="java.lang.String">
                    <description>Descrive il tipo di terreno in cui la pianta vive in condizioni ottimali</description>
                    <modifiers optional="false"/>
                    <persistence type="property"/>
                </attribute>
            </attributes>
        </itemtype>

        <itemtype code="FlowerProduct" extends= "PlantProduct" autocreate="true" generate="true">
            <deployment table="flowerProduct" typecode="22000"/>
        </itemtype>

        <itemtype code="FlowerVariantProduct" extends= "VariantProduct" autocreate="true" generate="true">
            <deployment table="flowerVariantProduct" typecode="22001"/>
            <attributes>
                <attribute qualifier="color" type="SwatchColorEnum">
                    <description>Descrive il colore del fiore</description>
                    <modifiers optional="false"/>
                    <persistence type="property"/>
                </attribute>
                <attribute qualifier="height" type="java.lang.Float">
                    <description>Descrive l'altezza della pianta contenente il fiore</description>
                    <modifiers optional="false"/>
                    <persistence type="property"/>
                </attribute>
                <attribute qualifier="weight" type="java.lang.Float">
                    <description>Descrive il peso della pianta contenente il fiore</description>
                    <modifiers optional="false"/>
                    <persistence type="property"/>
                </attribute>
                <attribute qualifier="scientificName" type="java.lang.String">
                    <description>Descrive il nome scientifico del fiore</description>
                    <modifiers optional="false"/>
                    <persistence type="property"/>
                </attribute>
            </attributes>
        </itemtype>

        <itemtype code="TreeProduct" extends= "PlantProduct" autocreate="true" generate="true">
            <deployment table="treeProduct" typecode="22002"/>
        </itemtype>

        <itemtype code="TreeVariantProduct" extends= "VariantProduct" autocreate="true" generate="true">
            <deployment table="treeVariantProduct" typecode="22003"/>
            <attributes>
                <attribute qualifier="height" type="java.lang.Float">
                    <description>Descrive l'altezza dell'albero</description>
                    <modifiers optional="false"/>
                    <persistence type="property"/>
                </attribute>
                <attribute qualifier="weight" type="java.lang.Float">
                    <description>Descrive il peso dell'albero</description>
                    <modifiers optional="false"/>
                    <persistence type="property"/>
                </attribute>
                <attribute qualifier="scientificName" type="java.lang.String">
                    <description>Descrive il nome scientifico dell'albero</description>
                    <modifiers optional="false"/>
                    <persistence type="property"/>
                </attribute>
                <attribute qualifier="origin" type="java.lang.String">
                    <description>Descrive il paese di provenienza dell'albero</description>
                    <modifiers optional="false"/>
                    <persistence type="property"/>
                </attribute>
                <attribute qualifier="diameterStem" type="java.lang.Float">
                    <description>Descrive il diametro del fusto dell'albero</description>
                    <modifiers optional="false"/>
                    <persistence type="property"/>
                </attribute>
            </attributes>
        </itemtype>

        <itemtype code="VegetablePlantProduct" extends= "PlantProduct" autocreate="true" generate="true">
            <deployment table="vegetablePlantProduct" typecode="22004"/>
        </itemtype>

        <itemtype code="VegetablePlantVariantProduct" extends= "VariantProduct" autocreate="true" generate="true">
            <deployment table="vegetablePlantVariantProduct" typecode="22005"/>
            <attributes>
                <attribute qualifier="height" type="java.lang.Float">
                    <description>Descrive l'altezza del vegetale</description>
                    <modifiers optional="false"/>
                    <persistence type="property"/>
                </attribute>
                <attribute qualifier="weight" type="java.lang.Float">
                    <description>Descrive il peso del vegetale</description>
                    <modifiers optional="false"/>
                    <persistence type="property"/>
                </attribute>
                <attribute qualifier="scientificName" type="java.lang.String">
                    <description>Descrive il nome scientifico del vegetale</description>
                    <modifiers optional="false"/>
                    <persistence type="property"/>
                </attribute>
                <attribute qualifier="farmingDifficulty" type="java.lang.Integer">
                    <description>Descrive la difficoltà di coltivazione del vegetale</description>
                    <modifiers optional="false"/>
                    <persistence type="property"/>
                </attribute>
                <attribute qualifier="vegetableColor" type="SwatchColorEnum">
                    <description>Descrive il colore del vegetale</description>
                    <modifiers optional="false"/>
                    <persistence type="property"/>
                </attribute>
            </attributes>
        </itemtype>
        <!-- TypeGroups are for structure of this file only -->

        <typegroup name="Apparel">
            <itemtype code="ApparelProduct" extends="Product"
                      autocreate="true" generate="true"
                      jaloclass="org.dutyfarm.core.jalo.ApparelProduct">
                <description>Base apparel product extension that contains additional attributes.</description>
                <attributes>
                    <attribute qualifier="genders" type="GenderList">
                        <description>List of genders that the ApparelProduct is designed for</description>
                        <modifiers/>
                        <persistence type="property"/>
                    </attribute>
                </attributes>
            </itemtype>

            <itemtype code="ApparelStyleVariantProduct" extends="VariantProduct"
                      autocreate="true" generate="true"
                      jaloclass="org.dutyfarm.core.jalo.ApparelStyleVariantProduct">
                <description>Apparel style variant type that contains additional attribute describing variant style.
                </description>
                <attributes>
                    <attribute qualifier="style" type="localized:java.lang.String"
                               metatype="VariantAttributeDescriptor">
                        <description>Color/Pattern of the product.</description>
                        <modifiers/>
                        <persistence type="property"/>
                    </attribute>

                    <attribute qualifier="swatchColors" type="SwatchColorSet">
                        <description>A normalized color mapping to a standardized front-end navigable name.
                        </description>
                        <modifiers/>
                        <persistence type="property"/>
                    </attribute>
                </attributes>

            </itemtype>

            <itemtype code="ApparelSizeVariantProduct" extends="ApparelStyleVariantProduct"
                      autocreate="true" generate="true"
                      jaloclass="org.dutyfarm.core.jalo.ApparelSizeVariantProduct">
                <description>Apparel size variant type that contains additional attribute describing variant size.
                </description>
                <attributes>
                    <attribute qualifier="size" type="localized:java.lang.String"
                               metatype="VariantAttributeDescriptor">
                        <description>Size of the product.</description>
                        <modifiers/>
                        <persistence type="property"/>
                    </attribute>
                </attributes>
            </itemtype>
        </typegroup>

        <typegroup name="Electronics">
            <itemtype code="ElectronicsColorVariantProduct" extends="VariantProduct"
                      autocreate="true" generate="true"
                      jaloclass="org.dutyfarm.core.jalo.ElectronicsColorVariantProduct">
                <description>Electronics color variant type that contains additional attribute describing variant color.
                </description>
                <attributes>
                    <attribute qualifier="color" type="localized:java.lang.String"
                               metatype="VariantAttributeDescriptor">
                        <description>Color of the product.</description>
                        <modifiers/>
                        <persistence type="property"/>
                    </attribute>
                </attributes>
            </itemtype>
        </typegroup>

    </itemtypes>
</items>
